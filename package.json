{
  "name": "uptimeshield",
  "private": true,
  "version": "0.0.1-beta",
  "type": "module",
  "scripts": {
    "predev": "powershell -ExecutionPolicy Bypass -File ./server/scripts/ensure-certs.ps1",
    "dev": "concurrently -k -n \"server,vite\" -c \"cyan,magenta\" \"node server/server.js\" \"vite\"",
    "server": "node server/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "install:all": "npm install && cd server && npm install"
  },
  "dependencies": {
    "@google/genai": "^1.33.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "devcert": "^1.2.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}